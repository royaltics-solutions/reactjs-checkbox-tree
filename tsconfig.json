{
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "declaration": true, // Habilita la generaci√≥n de archivos .d.ts
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": {
            "@reactjs-checkbox-tree": [
                "src/index.ts"
            ],
            "@/src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src",
        "examples"
    ]
}